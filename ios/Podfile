# ios/Podfile
platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Compatibilidad con macOS Sequoia
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.15'
      
      # Fix para BoringSSL-GRPC
      if target.name == 'BoringSSL-GRPC'
        target.source_build_phase.files.each do |file|
          if file.settings && file.settings['COMPILER_FLAGS']
            flags = file.settings['COMPILER_FLAGS'].split
            flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
            file.settings['COMPILER_FLAGS'] = flags.join(' ')
          end
        end
      end
    end
  end
  
  # Fix para Firebase Auth con Xcode 16.4
  firebase_auth_target = installer.pods_project.targets.find { |target| target.name == 'FirebaseAuth' }
  if firebase_auth_target
    firebase_auth_target.source_build_phase.files.each do |file|
      if file.file_ref && file.file_ref.path && file.file_ref.path.include?('FIRFederatedAuthProvider.h')
        puts "Fixing FirebaseAuth header file for Xcode 16.4 compatibility"
        header_file_path = file.file_ref.real_path
        if File.exist?(header_file_path)
          content = File.read(header_file_path)
          # Agregar coma faltante en l√≠nea 49
          content.gsub!(/NS_SWIFT_NAME\(federatedAuthProvider\(\)\)\s*$/, 'NS_SWIFT_NAME(federatedAuthProvider()),')
          File.write(header_file_path, content)
        end
      end
    end
  end
end